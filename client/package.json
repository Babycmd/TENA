{
  "name": "tena-flow-digital-client",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "description": "Tena Flow Digital - Healthcare Booking App",
  "author": "Tena Flow Team",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "vite build && electron .",
    "electron:build": "vite build && electron-builder --win",
    "electron:build:mac": "vite build && electron-builder --mac",
    "electron:build:linux": "vite build && electron-builder --linux",
    "android:build": "vite build && npx cap sync android && cd android && gradlew assembleDebug",
    "android:build:release": "vite build && npx cap sync android && cd android && gradlew assembleRelease"
  },
  "dependencies": {
    "@capacitor/android": "^8.1.0",
    "@capacitor/cli": "^8.1.0",
    "@capacitor/core": "^8.1.0",
    "axios": "^1.6.2",
    "lucide-react": "^0.575.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "electron": "^31.7.7",
    "electron-builder": "25.1.8",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.10"
  },
  "build": {
    "appId": "com.tenaflow.app",
    "productName": "Tena Flow",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/logo.png"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/logo.png"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "public/logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
